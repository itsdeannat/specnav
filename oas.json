{
  "openapi": "3.1.1",
  "info": {
    "title": "Sample Pet Store API",
    "version": "1.0.0",
    "description": "A simple pet store API for testing"
  },
  "paths": {
    "/pets": {
      "get": {
        "summary": "List all pets",
        "description": "Returns a list of all pets in the store",
        "operationId": "listPets",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Pet"
                  }
                },
                "example": [
                  {
                    "id": 1,
                    "name": "Fluffy",
                    "species": "cat",
                    "age": 3
                  },
                  {
                    "id": 2,
                    "name": "Rex",
                    "species": "dog",
                    "age": 5
                  }
                ]
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a pet",
        "operationId": "createPet",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PetInput"
              },
              "example": {
                "name": "Buddy",
                "species": "dog",
                "age": 2
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Pet created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Pet"
                },
                "example": {
                  "id": 3,
                  "name": "Buddy",
                  "species": "dog",
                  "age": 2
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Validation failed",
                  "message": "Pet name is required and must be a string"
                }
              }
            }
          }
        }
      }
    },
    "/pets/{petId}": {
      "parameters": [
        {
          "name": "petId",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer"
          },
          "description": "ID of the pet"
        },
        {
          "name": "petType",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          },
          "description": "Type of pet"
        }
      ],
      "get": {
        "summary": "Get a pet by ID",
        "description": "Returns a single pet",
        "operationId": "getPetById",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Pet"
                },
                "example": {
                  "id": 1,
                  "name": "Fluffy",
                  "species": "cat",
                  "age": 3
                }
              }
            }
          },
          "400": {
            "description": "Invalid pet ID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Invalid ID",
                  "message": "Pet ID must be a positive integer"
                }
              }
            }
          },
          "404": {
            "description": "Pet not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Not found",
                  "message": "Pet with ID 999 does not exist"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete a pet",
        "description": "Removes a pet from the store",
        "operationId": "deletePet",
        "responses": {
          "200": {
            "description": "Pet deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "message": "Pet with ID 1 has been deleted"
                }
              }
            }
          },
          "400": {
            "description": "Invalid pet ID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Invalid ID",
                  "message": "Pet ID must be a positive integer"
                }
              }
            }
          },
          "404": {
            "description": "Pet not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Not found",
                  "message": "Pet with ID 999 does not exist"
                }
              }
            }
          }
        }
      }
    },
    "/owners": {
      "get": {
        "summary": "List all owners",
        "operationId": "listOwners",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Owner"
                  }
                },
                "example": [
                  {
                    "id": 1,
                    "name": "John Doe",
                    "email": "john@example.com"
                  },
                  {
                    "id": 2,
                    "name": "Jane Smith",
                    "email": "jane@example.com"
                  }
                ]
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Pet": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "description": "A pet in the store",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier"
          },
          "name": {
            "type": "string",
            "description": "Pet name"
          },
          "species": {
            "type": "string",
            "description": "Type of animal",
            "enum": ["cat", "dog", "bird", "fish", "rabbit"]
          },
          "age": {
            "type": "integer",
            "description": "Age in years",
            "minimum": 0
          }
        }
      },
      "PetInput": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "description": "Input schema for creating a pet",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Pet name",
            "minLength": 1
          },
          "species": {
            "type": "string",
            "description": "Type of animal",
            "enum": ["cat", "dog", "bird", "fish", "rabbit"]
          },
          "age": {
            "type": "integer",
            "description": "Age in years",
            "minimum": 0
          }
        }
      },
      "Owner": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "description": "A pet owner",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier"
          },
          "name": {
            "type": "string",
            "description": "Owner name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Contact email"
          }
        }
      },
      "Error": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "description": "Error response",
        "required": ["error", "message"],
        "properties": {
          "error": {
            "type": "string",
            "description": "Error type"
          },
          "message": {
            "type": "string",
            "description": "Detailed error message"
          }
        }
      }
    }
  }
}